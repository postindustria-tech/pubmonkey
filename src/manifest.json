{
    "manifest_version": 2,

    "name": "MoPorter",
    "version": "2.0.1",
    "icons": {
            "16": "images/image.png",
            "32": "images/image.png",
            "48": "images/image.png",
            "64": "images/image.png",
            "128": "images/image.png"
    },
    "background": {
        "scripts": [ "background/index.js" ]
    },
    "permissions": [
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "https://app.mopub.com/*"
    ],
    "content_scripts": [{
        "matches": [ "https://app.mopub.com/*" ],
        "js": [ "content/content.js" ],
        "run_at": "document_end",
        "all_frames": true
    }],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "externally_connectable": {
        "matches": [ "https://app.mopub.com/*"]
    },
    "browser_action": {
          "default_icon": {
            "16": "images/image.png",
            "32": "images/image.png",
            "48": "images/image.png",
            "64": "images/image.png",
            "128": "images/image.png"
          },
          "default_title": "MoPorter"
    }
}
